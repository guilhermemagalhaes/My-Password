@model MyPassword.Entity.Plataforma

@{
    ViewData["Title"] = "Editar";
}

@if (Model.PlataformaId == 0)
{
    <h1>Nova Plataforma</h1>
}
else
{
    <h1>Editar - @Model.Nome</h1>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#conteudo" data-ajax-method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlataformaId" />
            <div class="form-group">
                <label asp-for="URL" class="control-label"></label>
                <input asp-for="URL" class="form-control" />
                <span asp-validation-for="URL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-outline-dark" /> 
                &nbsp;
                <a class="btn btn-outline-secondary" asp-action="Index"
                   data-ajax="true" data-ajax-mode="replace" data-ajax-update="#conteudo">Retornar</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
